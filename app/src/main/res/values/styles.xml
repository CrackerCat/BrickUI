<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BigNumber">
        <item name="android:textSize">38dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAlignment">center</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="font_body_small" parent="font_body">
        <item name="android:textSize">14dp</item>
    </style>
    <style name="text_body_small" parent="font_body_small">
        <item name="android:lineSpacingExtra">@dimen/line_spacing_extra_normal</item>
        <item name="android:paddingTop">@dimen/line_padding_extra_normal</item>
        <item name="android:paddingBottom">@dimen/line_padding_extra_normal</item>
    </style>

    <style name="font_body">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">#191D26</item>
    </style>

</resources>